<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);NU5100</NoWarn>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <RootNamespace>Xunit.v3</RootNamespace>
    <TargetFrameworks>net472;netstandard2.0</TargetFrameworks>
    <TransformOnBuild>true</TransformOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Package\**\*" />
    <None Include="Package\**\*" />
    <Compile Include="..\xunit.v3.assert\Asserts\Sdk\DynamicSkipToken.cs" LinkBase="Common\Asserts" />
    <Compile Include="..\common\MessagePartials\**\*.cs" LinkBase="Common\MessagePartials" />
    <T4Transform Include="TheoryDataRow.n.tt"/>
    <T4Transform Include="TheoryData.n.tt"/>
    <T4Transform Include="MatrixTheoryData.n.tt"/>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\*.rd.xml" />
    <InternalsVisibleTo Include="xunit.v3.core.tests, " />
    <InternalsVisibleTo Include="xunit.v3.core.x86.tests, " />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\xunit.v3.common\xunit.v3.common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="T4.BuildTools" Version="3.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
