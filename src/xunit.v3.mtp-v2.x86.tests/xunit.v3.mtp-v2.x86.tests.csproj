<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName Condition=" '$(TargetFramework)' == 'net472' ">xunit.v3.mtp-v2.netfx.x86.tests</AssemblyName>
    <AssemblyName Condition=" '$(TargetFramework)' == 'net8.0' ">xunit.v3.mtp-v2.netcore.x86.tests</AssemblyName>
    <DefineConstants>$(DefineConstants);MTP_V2</DefineConstants>
    <TargetFrameworks>net472;net8.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\xunit.v3.mtp-v1.tests\**\*.cs" Exclude="**\obj\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\xunit.v3.mtp-v2\xunit.v3.mtp-v2.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Testing.Platform.MSBuild" Version="[$(Microsoft_Testing_v2_Version),3.0.0)" />
  </ItemGroup>

</Project>
