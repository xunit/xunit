<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <!--#if (Framework == "net472" || Framework == "net48" || Framework == "net481") -->
    <!-- Need C# version 10+ for nullable reference types and implicit usings -->
    <LangVersion>10.0</LangVersion>
    <!--#endif -->
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    <RootNamespace>TestProject</RootNamespace>
    <TargetFramework>net8.0</TargetFramework>
    <!--
    This template uses native xUnit.net command line options when using 'dotnet run' and
    VSTest by default when using 'dotnet test'. For more information on how to enable support
    for Microsoft Testing Platform, please visit:
      https://xunit.net/docs/getting-started/v3/microsoft-testing-platform
    -->
  </PropertyGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="MICROSOFT_NET_TEST_SDK_VERSION" />
    <PackageReference Include="xunit.v3" Version="PACKAGE_VERSION" />
    <PackageReference Include="xunit.runner.visualstudio" Version="XUNIT_RUNNER_VISUALSTUDIO_VERSION" />
  </ItemGroup>

</Project>
