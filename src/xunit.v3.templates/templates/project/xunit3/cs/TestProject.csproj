<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <!--#if (Framework == "net472" || Framework == "net48" || Framework == "net481") -->
    <!-- Need C# version 10+ for nullable reference types and implicit usings -->
    <LangVersion>10.0</LangVersion>
    <!--#endif -->
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    <RootNamespace>TestProject</RootNamespace>
    <TargetFramework>net8.0</TargetFramework>
    <!--#if (TestRunner != "vstest") -->
    <!--#if (Framework != "net10.0") -->
    <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
    <!--#endif-->
    <!--#if (CommandLine == "mtp") -->
    <UseMicrosoftTestingPlatformRunner>true</UseMicrosoftTestingPlatformRunner>
    <!--#endif-->
    <!--#endif-->
  </PropertyGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <!--#if (TestRunner == "vstest") -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="MICROSOFT_NET_TEST_SDK_VERSION" />
    <PackageReference Include="xunit.runner.visualstudio" Version="XUNIT_RUNNER_VISUALSTUDIO_VERSION" />
    <PackageReference Include="xunit.v3.mtp-off" Version="PACKAGE_VERSION" />
    <!--#endif-->
    <!--#if (TestRunner == "mtp-v1") -->
    <PackageReference Include="xunit.v3.mtp-v1" Version="PACKAGE_VERSION" />
    <!--#endif-->
    <!--#if (TestRunner == "mtp-v2") -->
    <PackageReference Include="xunit.v3.mtp-v2" Version="PACKAGE_VERSION" />
    <!--#endif-->
  </ItemGroup>

</Project>
