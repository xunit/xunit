{
  "$schema": "http://json.schemastore.org/template",
  "author": "xUnit.net Team",
  "description": "New project template for xUnit.net v3 (F#)",
  "classifications": [
    "Test",
    "xUnit",
    "Desktop",
    "Web"
  ],
  "name": "xUnit.net v3 Test Project",
  "identity": "xunit.v3.project.fs",
  "groupIdentity": "xunit.v3",
  "shortName": "xunit3",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "sourceName": "TestProject",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "TestProject.fsproj"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project",
      "condition": "(!skipRestore)",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true,
      "args": {
        "files": [
          "TestProject.fsproj"
        ]
      }
    },
    {
      "condition": "(TestRunner != \"vstest\")",
      "description": "Create or update 'global.json' file required by Microsoft.Testing.Platform.",
      "manualInstructions": [ { "text": "If using .NET 10 SDK or later, manually update or create 'global.json' as per https://xunit.net/docs/getting-started/v3/microsoft-testing-platform#using-net-sdk-version-10-or-later" } ],
      "actionId": "695A3659-EB40-4FF5-A6A6-C9C4E629FCB0",
      "id": "addJsonProperty",
      "args": {
        "allowFileCreation": true,
        "allowPathCreation": true,
        "jsonFileName": "global.json",
        "parentPropertyPath": "test",
        "newJsonPropertyName": "runner",
        "newJsonPropertyValue": "Microsoft.Testing.Platform",
        "detectRepositoryRoot": true,
        "includeAllDirectoriesInSearch": false,
        "includeAllParentDirectoriesInSearch": true
      },
      "continueOnError": true
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "net8.0",
      "description": "Target framework",
      "replaces": "net8.0",
      "choices": [
        {
          "choice": "net472",
          "description": ".NET Framework 4.7.2"
        },
        {
          "choice": "net48",
          "description": ".NET Framework 4.8"
        },
        {
          "choice": "net481",
          "description": ".NET Framework 4.8.1"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8"
        },
        {
          "choice": "net9.0",
          "description": ".NET 9"
        },
        {
          "choice": "net10.0",
          "description": ".NET 10"
        }
      ]
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false",
      "displayName": "Skip restore"
    },
    "TestRunner": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "mtp-v2",
      "enableQuotelessLiterals": true,
      "displayName": "Test runner for 'dotnet test' and Test Explorer",
      "description": "Test runner for 'dotnet test' and Test Explorer",
      "choices": [
        {
          "choice": "mtp-v2",
          "displayName": "Microsoft.Testing.Platform v2",
          "description": "Microsoft.Testing.Platform v2"
        },
        {
          "choice": "mtp-v1",
          "displayName": "Microsoft.Testing.Platform v1",
          "description": "Microsoft.Testing.Platform v1"
        },
        {
          "choice": "vstest",
          "displayName": "VSTest",
          "description": "VSTest"
        }
      ]
    },
    "CommandLine": {
      "type": "parameter",
      "datatype": "choice",
      "isEnabled": "(TestRunner != \"vstest\")",
      "defaultValue": "xunit",
      "enableQuotelessLiterals": true,
      "displayName": "Command line experience for 'dotnet run'",
      "description": "Command line experience for 'dotnet run'",
      "choices": [
        {
          "choice": "xunit",
          "displayName": "xUnit.net native command line",
          "description": "xUnit.net native command line"
        },
        {
          "choice": "mtp",
          "displayName": "Microsoft.Testing.Platform command line",
          "description": "Microsoft.Testing.Platform command line"
        }
      ]
    }
  }
}
