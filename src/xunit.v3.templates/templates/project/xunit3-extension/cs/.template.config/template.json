{
  "$schema": "http://json.schemastore.org/template",
  "author": "xUnit.net Team",
  "description": "New project template for xUnit.net v3 extension (C#)",
  "classifications": [
    "Test",
    "xUnit"
  ],
  "name": "xUnit.net v3 Extension Project",
  "identity": "xunit.v3.extension.project.cs",
  "groupIdentity": "xunit.v3.extension",
  "shortName": "xunit3-extension",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ExtensionProject",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "ExtensionProject.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true,
      "args": {
        "files": [
          "ExtensionProject.csproj"
        ]
      }
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "netstandard2.0",
      "description": "Target framework",
      "replaces": "netstandard2.0",
      "choices": [
        {
          "choice": "netstandard2.0",
          "description": ".NET Standard 2.0"
        },
        {
          "choice": "net472",
          "description": ".NET Framework 4.7.2"
        },
        {
          "choice": "net48",
          "description": ".NET Framework 4.8"
        },
        {
          "choice": "net481",
          "description": ".NET Framework 4.8.1"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8"
        },
        {
          "choice": "net9.0",
          "description": ".NET 9"
        }
      ]
    }
  }
}
