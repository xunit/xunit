<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Nullable>enable</Nullable>
    <RootNamespace>Xunit.Runner.Common</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Transforms\templates\*.xslt" />
    <InternalsVisibleTo Include="xunit.v3.runner.common.tests, " />
    <InternalsVisibleTo Include="xunit.v3.runner.common.tests.x86, " />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETStandard' ">
    <EmbeddedResource Include="Resources\*.rd.xml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\xunit.v3.assert\Asserts\Sdk\ArgumentFormatter.cs" LinkBase="Common\Asserts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Pipelines" Version="$(SystemIoPipelinesVersion)" />
    <PackageReference Include="System.Net.Http" Version="$(SystemNetHttpVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\xunit.v3.common\xunit.v3.common.csproj" />
  </ItemGroup>

</Project>
