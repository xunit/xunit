<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputType>Exe</OutputType>
    <RunILRepack>true</RunILRepack>
    <TargetFrameworks>net472;net48;net481;net8.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\xunit.v3.core\Package\content\DefaultRunnerReporters.cs" LinkBase="Common" />
    <Compile Include="..\xunit.v3.core\Package\content\DefaultResultWriters.cs" LinkBase="Common" />
    <Compile Include="..\common\DotNetApiPolyfills.cs" LinkBase="Common" />
  </ItemGroup>

  <ItemGroup>
    <ILRepackExclusions Include="$(OutputPath)xunit.abstractions.dll" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\xunit.v3.runner.utility\xunit.v3.runner.utility.csproj" />
  </ItemGroup>

</Project>
